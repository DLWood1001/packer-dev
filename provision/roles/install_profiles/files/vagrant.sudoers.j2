# Disable TTY Requirement for admin.
Defaults:{{profiles[item].name}}    !requiretty

# Update secure_path to include /usr/local/bin.
# Note (Dan): Removed the /bin and /sbin as they are symlinked on CentOS/RHEL/Fedora
Defaults:{{profiles[item].name}}    secure_path = /usr/local/bin:/usr/bin:/usr/sbin

# Disable sudo Password Requirement for admin.
{{profiles[item].name}} ALL=(ALL) NOPASSWD:ALL

