{
   "builders": [
      {
         "name": "{{user `name`}}",
         "output_directory": "output",
         "http_directory": "kickstart",

         "iso_url": "{{user `iso_path`}}/{{user `iso_file`}}",
         "iso_checksum_type": "sha256",
         "iso_checksum": "{{user `iso_checksum_sha256_hash`}}",

         "guest_additions_url": "{{user `guest_additions_path`}}/{{user `guest_additions_file`}}",
         "guest_additions_sha256": "{{user `guest_additions_sha256_hash`}}",

         "type": "virtualbox-iso",
         "headless": false,
         "guest_os_type": "RedHat_64",
         "hard_drive_interface": "sata",
         "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
            ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"]
         ],

         "boot_command": [
            "<tab> ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `name`}}-{{user `kickstart_target`}}.cfg<enter>"
         ],
         "boot_wait": "10s",
         "shutdown_command": "echo 'password' | sudo -S shutdown -h now",

         "ssh_username": "{{user `ssh_username`}}",
         "ssh_password": "{{user `ssh_password`}}",
         "ssh_port": "22",
         "ssh_wait_timeout": "25m",

         "shutdown_command": "echo 'password' | sudo -S shutdown -h now"
      }
   ],

   "provisioners": [
      {
         "type": "ansible",
         "playbook_file": "./provision/pb_bootstrap_ansible.yaml",
         "extra_arguments": [
            "--extra-vars", "ansible_become_pass={{user `sudo_password`}}",
            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      },
      {
         "type": "ansible",
         "playbook_file": "./provision/pb_install_users.yaml",
         "extra_arguments": [
            "--extra-vars", "ansible_become_pass={{user `sudo_password`}}",
            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      }
   ],

   "post-processors": [
      {
        "type": "vagrant",
        "output": "builds/{{user `name`}}.{{user `provider`}}.box",
        "vagrantfile_template": "./templates/vagrantfile-{{user `provider`}}"
      }
   ],

   "variables": {
      "name": "centos-7.3",
      "provider": "virtualbox",

      "iso_file": "CentOS-7-x86_64-DVD-1611.iso",
      "iso_path": "http://mirrors.kernel.org/centos/7.3.1611/isos/x86_64",
      "iso_checksum_sha256_hash": "c455ee948e872ad2194bdddd39045b83634e8613249182b88f549bb2319d97eb",

      "guest_additions_file": "VBoxGuestAdditions_5.1.21-115005.iso",
      "guest_additions_path": "https://www.virtualbox.org/download/testcase",
      "guest_additions_sha256_hash": "d348c2265b8ebae37ef3599dcbb839599093550ae1c60b0c7d471a48ecf70213",

      "kickstart_target": "graphical",

      "headless": "true",
      "cpus": "4",
      "memory": "4096",

      "ssh_username": "root",
      "ssh_password": "password",
      "sudo_password": "password",

      "http_proxy": "{{env `http_proxy`}}",
      "https_proxy": "{{env `https_proxy`}}"
   }
}
