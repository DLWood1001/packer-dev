{
   "builders": [
      {
         "name": "{{user `name`}}.vmware",
         "type": "vmware-iso",

         "iso_url": "{{user `iso_path`}}/{{user `iso_file`}}",
         "iso_checksum_type": "sha256",
         "iso_checksum": "{{user `iso_checksum_sha256_hash`}}",

         "tools_upload_flavor": "linux",
         "tools_upload_path": "{{.Flavor}}.iso",

         "headless": "{{user `headless`}}",
         "guest_os_type": "centos-64",
         "disk_type_id": 0, 
         "vmx_data": {
            "numvcpus": "{{user `cpus`}}",
            "memsize": "{{user `memory`}}",

            "scsi0.present": "TRUE",
            "scsi0.virtualDev": "pvscsi",

            "ethernet0.present": "TRUE",
            "ethernet0.connectionType": "nat",
            "ethernet0.virtualDev": "vmxnet3"
         },
         "vmx_data_post": {

         },

         "http_directory": "kickstart",
         "boot_wait": "5s",
         "boot_command": [
            "<tab>",
            "<leftCtrlOn>ww<leftCtrlOff>",
            "quiet ",
            "ipv6.disable=1 ",
            "biosdevname=0 ",
            "net.ifnames=0 ",
            "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `target`}}.cfg",
            "<enter>"
         ],

         "shutdown_command": "echo 'password' | sudo -S shutdown -h now",

         "vm_name": "{{user `name`}}.{{user `target`}}.vmware",
         "vmdk_name": "{{user `name`}}.{{user `target`}}.vmware",
         "output_directory": "builds/vmx/{{user `name`}}.{{user `target`}}.vmware",

         "ssh_username": "{{user `ssh_username`}}",
         "ssh_password": "{{user `ssh_password`}}",
         "ssh_port": "{{user `ssh_port`}}",
         "ssh_wait_timeout": "25m"
      },
      {
         "name": "{{user `name`}}.qemu",
         "type": "qemu",

         "iso_url": "{{user `iso_path`}}/{{user `iso_file`}}",
         "iso_checksum_type": "sha256",
         "iso_checksum": "{{user `iso_checksum_sha256_hash`}}",

         "headless": "{{user `headless`}}",
         "accelerator": "kvm",
         "net_device": "virtio-net",
         "qemuargs": [
            ["-smp", "{{user `cpus`}},sockets={{user `cpus`}},cores=1,threads=1"],
            ["-m", "{{user `memory`}}M"]
         ],

         "http_directory": "kickstart",
         "boot_wait": "5s",
         "boot_command": [
            "<tab>",
            "<leftCtrlOn>ww<leftCtrlOff>",
            "quiet ",
            "biosdevname=0 ",
            "net.ifnames=0 ",
            "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `target`}}.cfg",
            "<enter>"
         ],

         "shutdown_command": "echo '{{user `ssh_password`}}' | sudo -S shutdown -h now",

         "vm_name": "{{user `name`}}.{{user `target`}}.qemu",
         "output_directory": "builds/ova",

         "ssh_username": "{{user `ssh_username`}}",
         "ssh_password": "{{user `ssh_password`}}",
         "ssh_port": "{{user `ssh_port`}}",
         "ssh_wait_timeout": "25m"
      }
   ],

   "provisioners": [
      {
         "type": "ansible",
         "playbook_file": "./provision/pb_optimize_sshd.yaml",
         "extra_arguments": [
            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      },

      {
         "type": "ansible",
         "playbook_file": "./provision/pb_fix_networking.yaml",
         "extra_arguments": [
            "--extra-vars", "provider={{user `provider`}}",

            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      },

      {
         "type": "ansible",
         "playbook_file": "./provision/pb_install_local_repo.yaml",
         "extra_arguments": [
            "--extra-vars", "media={{user `media`}}",

            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      },

      {
         "type": "ansible",
         "playbook_file": "./provision/pb_install_users.yaml",
         "extra_arguments": [
            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      },

      {
         "type": "ansible",
         "playbook_file": "./provision/pb_install_open_vm_tools.yaml",
         "extra_arguments": [
            "--extra-vars", "target={{user `target`}}",
            "--extra-vars", "provider={{user `provider`}}",

            "--extra-vars", "media={{user `media`}}",

            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      },

      {
         "type": "ansible",
         "playbook_file": "./provision/pb_install_gnome_preferences.yaml",
         "extra_arguments": [
            "--extra-vars", "target={{user `target`}}",
            "--extra-vars", "media={{user `media`}}",

            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      },

      {
         "type": "ansible",
         "playbook_file": "./provision/pb_optimize_grub.yaml",
         "extra_arguments": [
            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      },

      {
         "type": "ansible",
         "playbook_file": "./provision/pb_optimize_yum.yaml",
         "extra_arguments": [
            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      },

      {
         "type": "ansible",
         "playbook_file": "./provision/pb_optimize_disk_size.yaml",
         "extra_arguments": [
            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      }
   ],

   "post-processors": [
      {
        "type": "vagrant",
        "output": "builds/box/{{user `name`}}.{{user `target`}}.{{user `provider`}}.box",
        "keep_input_artifact": true,
        "vagrantfile_template": "./templates/vagrantfile-{{user `name`}}"
      }
   ],

   "variables": {
      "name": "centos-7.3",
      "target": "multi-user",
      "provider": "vmware",

      "media": "local",

      "iso_file": "CentOS-7-x86_64-DVD-1611.iso",
      "iso_path": "http://mirrors.kernel.org/centos/7.3.1611/isos/x86_64",
      "iso_checksum_sha256_hash": "c455ee948e872ad2194bdddd39045b83634e8613249182b88f549bb2319d97eb",

      "cpus": "4",
      "memory": "4096",
      "headless": "false",

      "ssh_username": "root",
      "ssh_password": "password",
      "ssh_port": "22",
      "sudo_password": "password",

      "ansible_port": "2323",

      "http_proxy": "{{env `http_proxy`}}",
      "https_proxy": "{{env `https_proxy`}}"
   }
}
