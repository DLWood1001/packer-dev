{
   "builders": [
      {
         "name": "{{user `name`}}.virtualbox",
         "type": "virtualbox-iso",

         "iso_url": "{{user `iso_path`}}/{{user `iso_file`}}",
         "iso_checksum_type": "sha256",
         "iso_checksum": "{{user `iso_checksum_sha256_hash`}}",

         "guest_additions_mode": "upload",
         "guest_additions_path": "/tmp/VBoxGuestAdditions_{{.Version}}.iso",

         "headless": "{{user `headless`}}",
         "guest_os_type": "Ubuntu_64",
         "hard_drive_interface": "sata",
         "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
            ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],

            ["modifyvm", "{{.Name}}", "--nic1", "nat"],
            ["modifyvm", "{{.Name}}", "--nictype1", "virtio"],
            ["modifyvm", "{{.Name}}", "--cableconnected1", "on"],
            ["modifyvm", "{{.Name}}", "--natpf1", "oobm,tcp,127.0.0.1,{{user `oobm_port`}},,22"]
         ],
         "vboxmanage_post": [
            ["modifyvm", "{{.Name}}", "--natpf1", "delete", "oobm"]
         ],

         "http_directory": "kickstart",
         "boot_wait": "5s",
         "boot_command": [
            "<enter><wait><f6><esc><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "/install/vmlinuz ",
            "auto ",

            "console-setup/ask_detect=false ",
            "console-setup/layoutcode=us ",
            "console-setup/modelcode=pc105 ",

            "debconf/frontend=noninteractive ",
            "debian-installer=en_US.UTF-8 ",

            "fb=false ",

            "initrd=/install/initrd.gz ",

            "kbd-chooser/method=us ",
            "keyboard-configuration/layout=USA ",
            "keyboard-configuration/variant=USA ",

            "locale=en_US.UTF-8 ",

            "netcfg/get_domain=local ",
            "netcfg/get_hostname=ubuntu ",

            "noapic ",
            "biosdevname=0 ",
            "net.ifnames=0 ",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `name`}}-{{user `target`}}.cfg ",
            "--- ",
            "<enter><wait>"
         ],

         "post_shutdown_delay": "30s",
         "shutdown_command": "echo 'password' | sudo -S shutdown -h now",

         "format": "ova",
         "vm_name": "{{user `name`}}.{{user `target`}}.virtualbox",
         "output_directory": "builds/ova",

         "ssh_username": "{{user `ssh_username`}}",
         "ssh_password": "{{user `ssh_password`}}",
         "ssh_port": "{{user `ssh_port`}}",
         "ssh_wait_timeout": "25m"
      }
   ],

   "provisioners": [
      {
         "type": "ansible",
         "playbook_file": "./provision/pb_optimize_sshd.yaml",
         "extra_arguments": [
            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      },

      {
         "type": "ansible",
         "playbook_file": "./provision/pb_install_users.yaml",
         "extra_arguments": [
            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      }
   },

   "variables": {
      "name": "ubuntu-16.04.2",
      "version": "16.04.2",
      "target": "server",
      "provider": "virtualbox",

      "media": "local",

      "iso_file": "ubuntu-16.04.2-server-amd64.iso",
      "iso_path": "http://releases.ubuntu.com/16.04.2/",
      "iso_checksum_sha256_hash": "737ae7041212c628de5751d15c3016058b0e833fdc32e7420209b76ca3d0a535",

      "cpus": "4",
      "memory": "4096",
      "headless": "false",

      "ssh_username": "root",
      "ssh_password": "password",
      "ssh_port": "22",

      "oobm_port": "2323",

      "http_proxy": "{{env `http_proxy`}}",
      "https_proxy": "{{env `https_proxy`}}"
   }
}
