{
   "builders": [
      {
         "name": "{{user `name`}}-{{user `version`}}-virtualbox",
         "type": "virtualbox-iso",

         "iso_url": "{{user `iso_path`}}/{{user `iso_file`}}",
         "iso_checksum_type": "sha256",
         "iso_checksum": "{{user `iso_checksum_sha256_hash`}}",

         "guest_additions_mode": "upload",
         "guest_additions_path": "/tmp/VBoxGuestAdditions_{{.Version}}.iso",

         "headless": "{{user `headless`}}",
         "guest_os_type": "RedHat_64",
         "hard_drive_interface": "sata",
         "vboxmanage": [
            ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
            ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],

            ["storagectl", "{{.Name}}", "--name", "SATA Controller", "--hostiocache", "on"],

            ["modifyvm", "{{.Name}}", "--nic1", "nat"],
            ["modifyvm", "{{.Name}}", "--nictype1", "virtio"],
            ["modifyvm", "{{.Name}}", "--cableconnected1", "on"],
            ["modifyvm", "{{.Name}}", "--natpf1", "oobm,tcp,127.0.0.1,{{user `oobm_port`}},,22"]
         ],
         "vboxmanage_post": [
            ["modifyvm", "{{.Name}}", "--natpf1", "delete", "oobm"]
         ],

         "http_directory": "kickstart",
         "boot_wait": "5s",
         "boot_command": [
            "<tab>",
            "<leftCtrlOn>ww<leftCtrlOff>",
            "quiet ",
            "biosdevname=0 ",
            "net.ifnames=0 ",
            "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `name`}}-{{user `version`}}-{{user `target`}}.cfg",
            "<enter>"
         ],

         "post_shutdown_delay": "30s",
         "shutdown_command": "echo 'password' | sudo -S shutdown -h now",

         "format": "ova",
         "vm_name": "{{user `name`}}-{{user `version`}}-{{user `target`}}-virtualbox",
         "output_directory": "builds/ova",

         "ssh_username": "{{user `ssh_username`}}",
         "ssh_password": "{{user `ssh_password`}}",
         "ssh_port": "{{user `ssh_port`}}",
         "ssh_wait_timeout": "25m"
      },
      {
         "name": "{{user `name`}}-{{user `version`}}-libvirt",
         "type": "qemu",

         "iso_url": "{{user `iso_path`}}/{{user `iso_file`}}",
         "iso_checksum_type": "sha256",
         "iso_checksum": "{{user `iso_checksum_sha256_hash`}}",

         "headless": "{{user `headless`}}",
         "accelerator": "kvm",
         "net_device": "virtio-net",
         "qemuargs": [
            ["-smp", "{{user `cpus`}},sockets={{user `cpus`}},cores=1,threads=1"],
            ["-m", "{{user `memory`}}M"]
         ],

         "http_directory": "kickstart",
         "boot_wait": "5s",
         "boot_command": [
            "<tab>",
            "<leftCtrlOn>ww<leftCtrlOff>",
            "quiet ",
            "biosdevname=0 ",
            "net.ifnames=0 ",
            "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `name`}}-{{user `version`}}-{{user `target`}}.cfg",
            "<enter>"
         ],

         "shutdown_command": "echo '{{user `ssh_password`}}' | sudo -S shutdown -h now",

         "vm_name": "{{user `name`}}-{{user `version`}}-{{user `target`}}-libvirt",
         "output_directory": "builds/ova",

         "ssh_username": "{{user `ssh_username`}}",
         "ssh_password": "{{user `ssh_password`}}",
         "ssh_port": "{{user `ssh_port`}}",
         "ssh_wait_timeout": "25m"
      },
      {
         "name": "{{user `name`}}-{{user `version`}}-vmware",
         "type": "vmware-iso",

         "iso_url": "{{user `iso_path`}}/{{user `iso_file`}}",
         "iso_checksum_type": "sha256",
         "iso_checksum": "{{user `iso_checksum_sha256_hash`}}",

         "tools_upload_flavor": "linux",
         "tools_upload_path": "{{.Flavor}}.iso",

         "headless": "{{user `headless`}}",
         "guest_os_type": "centos-64",
         "disk_type_id": 0, 
         "vmx_data": {
            "numvcpus": "{{user `cpus`}}",
            "memsize": "{{user `memory`}}",

            "scsi0.present": "TRUE",
            "scsi0.virtualDev": "pvscsi",

            "ethernet0.present": "TRUE",
            "ethernet0.connectionType": "nat",
            "ethernet0.virtualDev": "vmxnet3"
         },
         "vmx_data_post": {

         },

         "http_directory": "kickstart",
         "boot_wait": "5s",
         "boot_command": [
            "<tab>",
            "<leftCtrlOn>ww<leftCtrlOff>",
            "quiet ",
            "biosdevname=0 ",
            "net.ifnames=0 ",
            "ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `name`}}-{{user `version`}}-{{user `target`}}.cfg",
            "<enter>"
         ],

         "shutdown_command": "echo 'password' | sudo -S shutdown -h now",

         "vm_name": "{{user `name`}}-{{user `version`}}-{{user `target`}}-vmware",
         "vmdk_name": "{{user `name`}}-{{user `version`}}-{{user `target`}}-vmware",
         "output_directory": "builds/vmx/{{user `name`}}-{{user `version`}}-{{user `target`}}-vmware",

         "ssh_username": "{{user `ssh_username`}}",
         "ssh_password": "{{user `ssh_password`}}",
         "ssh_port": "{{user `ssh_port`}}",
         "ssh_wait_timeout": "25m"
      }
   ],

   "provisioners": [
      {
         "type": "ansible",
         "playbook_file": "./provision/pb_install_roles.yaml",
         "extra_arguments": [
            "--extra-vars", "name={{user `name`}}",

            "--extra-vars", "target={{user `target`}}",
            "--extra-vars", "media={{user `media`}}",

            "--extra-vars", "oobm_port={{user `oobm_port`}}",

            "--extra-vars", "http_proxy={{user `http_proxy`}}",
            "--extra-vars", "https_proxy={{user `https_proxy`}}"
         ]
      }
   ],

   "post-processors": [
      {
        "type": "vagrant",
        "output": "builds/box/{{user `name`}}-{{user `version`}}-{{user `target`}}-{{.Provider}}.box",
        "keep_input_artifact": true,
        "vagrantfile_template": "./templates/vagrantfile-{{user `name`}}-{{user `version`}}"
      }
   ],

   "variables": {
      "name": "centos",
      "version": "7.3",
      "target": "server",
      "media": "local",

      "iso_file": "CentOS-7-x86_64-DVD-1611.iso",
      "iso_path": "http://mirrors.kernel.org/centos/7.3.1611/isos/x86_64",
      "iso_checksum_sha256_hash": "c455ee948e872ad2194bdddd39045b83634e8613249182b88f549bb2319d97eb",

      "cpus": "4",
      "memory": "4096",
      "headless": "false",

      "ssh_username": "root",
      "ssh_password": "password",
      "ssh_port": "22",

      "oobm_port": "2323",

      "http_proxy": "{{env `http_proxy`}}",
      "https_proxy": "{{env `https_proxy`}}"
   }
}
